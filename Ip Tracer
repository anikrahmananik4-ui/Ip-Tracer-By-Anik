<script src="https://cdn.jsdelivr.net/npm/three@0.160/build/three.min.js"></script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
// ===== THREE.JS EARTH =====
let scene=new THREE.Scene();
let camera=new THREE.PerspectiveCamera(45,innerWidth/innerHeight,1,1000);
let renderer=new THREE.WebGLRenderer({antialias:true,alpha:true});
renderer.setSize(innerWidth,innerHeight);
document.getElementById("globe").appendChild(renderer.domElement);

let earth=new THREE.Mesh(
 new THREE.SphereGeometry(5,64,64),
 new THREE.MeshBasicMaterial({
  map:new THREE.TextureLoader().load(
   "https://threejs.org/examples/textures/planets/earth_atmos_2048.jpg"
  )
 })
);
scene.add(earth);

let beam=new THREE.Mesh(
 new THREE.CylinderGeometry(.03,.03,8,32),
 new THREE.MeshBasicMaterial({color:0x00ffe7})
);
beam.position.y=4;
scene.add(beam);

camera.position.z=12;

function animate(){
 requestAnimationFrame(animate);
 earth.rotation.y+=0.002;
 beam.rotation.y+=0.01;
 renderer.render(scene,camera);
}
animate();

// ===== MAP =====
let map=L.map('map').setView([0,0],2);
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png')
.addTo(map);
let marker;

function mark(lat,lng){
 map.setView([lat,lng],6);
 if(marker) map.removeLayer(marker);
 marker=L.marker([lat,lng]).addTo(map);
}

// ===== VOICE =====
function speak(t){
 let s=new SpeechSynthesisUtterance(t);
 s.rate=0.9;
 speechSynthesis.speak(s);
}

// ===== IP TRACE =====
function trace(){
 speak("Orbital scan initiated");
 let ip=document.getElementById("ip").value.trim();
 let url=ip?`https://ipapi.co/${ip}/json/`:`https://ipapi.co/json/`;

 fetch(url).then(r=>r.json()).then(d=>{
  if(d.error){
   document.getElementById("out").innerHTML="<p>‚ùå INVALID IP</p>";
   speak("Invalid IP detected");
   return;
  }
  let threat=Math.floor(Math.random()*20)+80;
  document.getElementById("out").innerHTML=`
   <p>üß¨ IP: ${d.ip}</p>
   <p>üåç Country: ${d.country_name}</p>
   <p>üèô City: ${d.city}</p>
   <p>üì° ISP: ${d.org}</p>
   <p>üõ∞ Lat/Lng: ${d.latitude}, ${d.longitude}</p>
   <p>‚ò¢ THREAT LEVEL: ${threat}%</p>
   <p>‚ö° STATUS: TRACE COMPLETE</p>
  `;
  mark(d.latitude,d.longitude);
  speak("Scan completed successfully");
 });
}
</script>

